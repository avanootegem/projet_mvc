{% extends "template.html.twig" %}

{% block body %}
<div class="body-content">
    <form method="POST" action="{{baseUrl}}/reset/{{id}}">
        <h2>Reinitialliser votre mot de passe</h2>
        <p>Nous somme heureux de vous revoir parmis nous!</p>
        <div class="input-container">
            <input type="password" name="password" placeholder="password" class="input-field" autocomplete="off">
        </div>

        <div class="input-container">
            <input type="password" name="confirm_password" placeholder="confirm_password" class="input-field" autocomplete="off">
        </div>

        <button type="submit" class="btn">Valider</button>
        {% if flash != NULL %}
            <div class="{{flash.type}}">
                <h6>{{flash.message}}</h6>
            </div>
        {% endif %}
    </form>
</div>
{% endblock %}