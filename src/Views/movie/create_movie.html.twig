{% extends "template.html.twig" %}

{% block body %}
<div class="body-content">
    <form method="POST" action="{{baseUrl}}/create">
        <h2>Ajouter un film</h2>
        <p></p>  
        <div class="input-container">
            <input type="text" name="title" class="input-field" placeholder="title">
        </div>

        <div class="input-container">
            <input type="text" name="year" class="input-field" placeholder="year">
        </div>

        <div class="input-container">
            <textarea type="text" name="synopsis" class="input-field" placeholder="synopsis"></textarea>
        </div>

        <div class="check">
            <label> released : </label>
            <input type="checkbox" name="released" value="1"/>
        </div>

        <div class="check">
            <label> favorite : </label>
            <input type="checkbox" name="favorite" value="1"/>
        </div>

        <button type="submit" class="btn">Cr√©er</button>
    </form>
</div>
{% endblock %}